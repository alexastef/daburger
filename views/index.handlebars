<!-- Row for the Burger columns -->
<div class="row">

<!-- Burgers to Be Devoured column -->
    <div class="column">
        <div class="notDevoured">
        <h2>Burgers To Devour</h2>
        
        <ul>
        {{#each burgers}}
            {{#unless devoured}}
            <li class='list-group-item burger-item'>
               <span>{{id}}. {{burger_name}}</span>  <button class="devourBtn" id="{{id}}">Devour!</button>
            </li>
            {{/unless}}
        {{/each}}
        </ul>
        </div>
    </div>

<!-- Burgers Devoured column -->
    <div class="column">
        <div class="devoured">
        <h2>Devoured Burgers</h2>
        <ul>
        {{#each burgers}}
            {{#if devoured}}
            <li class='list-group-item devoured-burger'>
                {{id}}. {{burger_name}}
            </li>
            {{/if}}
        {{/each}}
        </ul>
        </div>
    </div>

</div>
